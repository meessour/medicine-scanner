<%- include ("./partials/head.ejs") %>

<div id="camera-container" class="centered">
    <video autoplay id="user-camera" class="hideCameraCanvas"></video>
    <div id="camera-controls-container">
        <button id="enable-camera-button" class="input" disabled>Enable camera</button>
        <button id="disable-camera-button" class="input hidden">Disable camera</button>
        <button id="switch-camera" class="hidden">
            <img alt="Search" class="search-icon" src="/img/icons/switch_video-24px.svg">
        </button>
    </div>

    <div id="loading-bar-container">
        <div id="loading-bar"></div>
    </div>
    <!-- Divder-->
    <!--    <hr class="rounded">-->

    <div class="extra-options-container">
        <div class="search-wrapper">
            <input id="search-medicine" type="text" placeholder="Search medicine..."/>
            <button type="submit" id="search-button">
                <img alt="Search" class="search-icon" src="/img/icons/search-24px.svg">
            </button>
        </div>
    </div>

    <div id="scan-result-container" class="hidden">
    </div>

</div>

